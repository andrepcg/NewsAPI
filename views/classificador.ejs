			$('[data-toggle=popover]').popover();

			$("[data-toggle=popover]").click(function(event){
			    event.preventDefault();
			});
			
			if(introDone == 1)
				$(".jumbotron").hide();

			fetchNews(10, function(){

				for (var i = 0; i < numNoticias - 1; i++) {
					var d = $("[id-noticia=1]").clone().removeAttr('intro').appendTo("#noticias");
					substituiNoticia(d);
				};

				substituiNoticia($("[id-noticia=1]"), function(){
					$("[id-noticia]").each(function(index, el) {
						$(el).removeClass('hidden');
					});
				});

				$("[id-noticia] #saltarnoticia").click(function(e){
					var div = $(this).parents("[id-noticia]");
					div.fadeOut(function(){
						substituiNoticia(div, function(){
							div.fadeIn();
						});
					});
				});


				$("[id-noticia] .botoes button").click(function(e){
					var div = $(this).parents("[id-noticia]");
					avaliadas++;
					$('.progress-bar').css('width', (avaliadas/minNum)*100+'%').attr('aria-valuenow', avaliadas).text(avaliadas+"/"+minNum);
					
					if(avaliadas == minNum){
						$('#progressoconcluido').modal('show');
					}

					div.fadeOut(function(){
					
						substituiNoticia(div, function(){
							div.fadeIn();
						});
						
					});
					
				});
			});


			$("#comecar").click(function(){
				$('html, body').animate({
					scrollTop: $("#progressotitulo").offset().top
				}, 1000);
			});
			
			$("#tutorial").click(function(){
				intro.start();
			});
			
			intro.oncomplete(function() {
				$(".jumbotron").slideToggle();
				$.cookie('introducao_concluida', 1, { expires: 364 });
			});
			intro.onexit(function() {
				$(".jumbotron").slideToggle();
			});


		});
		
		function substituiNoticia(div, cb){
			var noticia = listaNoticias.shift();

			div.find(".titulo").text(limitWords(noticia.titulo, 10));

			replace(div.find(".subtitulo"), limitWords(noticia.subtitulo, (noticia.textoNoticia) ? 20 : 80));
				
			div.find(".texto").text(limitWords(noticia.textoNoticia, (noticia.subtitulo) ? 40 : 80));
			div.find(".jornal").text(noticia.jornal);

			div.find(".url").html("<a href='"+noticia.url+"'>Link</a>");

			replace(div.find(".categoria"), noticia.categoria, "---");		

			if(noticia.imgURL)
				div.find(".center-cropped").css("background-image", "url('"+noticia.imgURL+"')")
			else
				div.find(".center-cropped").css("background-image", "url('http://placehold.it/202x176&text=Sem%20imagem')")

			div.attr("id-noticia", noticia._id);

			if(noticia.subtitulo)
				div.find(".subtitulo").removeClass("hidden");
			else
				div.find(".subtitulo").addClass("hidden");
				
			fetchNews(5);
			if(cb)
				cb();


		}

		function replace(selector, type, rep){
			if(type)
				selector.text(type);
			else
				selector.text((rep) ? rep : "");
		}
		
		function fetchNews(qtd, cb){
			if(listaNoticias.length <= 5){
				console.log("news loaded")
				$.getJSON("http://newsptapi.herokuapp.com/api/noticias/random/" + qtd, function(data) {
					if(data.status == "ok"){
						listaNoticias = listaNoticias.concat(data.data);
						data.data.forEach(function(noticia){
							if(noticia.imgURL){
								(new Image()).src = noticia.imgURL;
							}
						});
						if(cb)
							cb();
					}
				});
			}
		}
		
		function limitWords(textToLimit, wordLimit)
		{
			if(!textToLimit)
				return "";

			var finalText = "";
			var text2 = textToLimit.replace(/\s+/g, ' ');
			var text3 = text2.split(' ');
			var numberOfWords = text3.length;
			var i=0;

			if(numberOfWords > wordLimit){
				for(i=0; i< wordLimit; i++)
					finalText = finalText+" "+ text3[i]+" ";
				return finalText+"...";
			}
			else
				return textToLimit;
		}

